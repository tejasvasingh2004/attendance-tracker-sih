generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  enrollmentNumber String   @unique
  email            String   @unique
  hardwareId       String
  password         String
  emailToken       String?  
  isVerified       Boolean  @default(false)
  createdAt        DateTime @default(now())
}
